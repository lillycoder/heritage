<h1 class="col-10 offset-1">Please review/update the information</h1>
<br />
<div class="booyah-box col-10 offset-1">
  <h2>Owner's Name: <%= @townhouse.name %></h2>
  <ul>
    <% if @townhouse.tenants.present? %>
      <% @townhouse.tenants.each do |tenant| %>
        <li>
          <p>Current Tenant: <%= tenant.name %></p>
        </li>
      <% end %>
    <% end %>
  </ul>
  <p> Address: <%= @townhouse.address %></p>
  <p>Primary Email: <%= @townhouse.primaryemail %></p>
  <p>Seconary Email: <%= @townhouse.secondaryemail %></p>
  <p>Primary Phone Number: <%= @townhouse.primaryphone %></p>
  <p>Secondary Phone Number: <%= @townhouse.secondaryphone %></p>
  <p>Emergency Contact Information: <%= @townhouse.emergency %></p>
  <p>Comments: <%= @townhouse.comment %></p>
  <%= link_to 'Edit', edit_owner_townhouse_path(@townhouse), class: 'btn btn-info btn-sm' %>
  <%= link_to 'Delete', owner_townhouse_path(@townhouse), method: :delete, data: {confirm: 'Are you sure you want to delete this registration?'},class: 'btn btn-danger btn-sm' %>
  <%= link_to 'Done', root_path, class: 'btn btn-info btn-sm' %>
  <br />

  <br />
    <%= link_to 'Add Tenant', new_owner_townhouse_tenant_path(@townhouse) %>
</div>

 
