<script type="text/javascript">
  $(function(){
    $.get("http://api.openweathermap.org/data/2.5/weather?zip=22180&units=imperial&appid=a22802d5d0a8934766ff17043be2734f", function( data ) {
      var temp = data.main.temp;
      var description = data.weather[0].description;
      var pelement = $('p.OPW');
      pelement.html("The weather in Vienna right now is " + temp + "F with " + description + ".");
    });
  });
</script>
